<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_add_moment"
    app:startDestination="@+id/addMomentFragment">

    <fragment
        android:id="@+id/addMomentFragment"
        android:name="com.hushbunny.app.ui.addmoment.AddMomentFragment"
        android:label="@string/title_add_moment"
        tools:layout="@layout/fragment_add_moment">
        <action
            android:id="@+id/actionAddKidFragment"
            app:destination="@+id/addKidsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addKidsFragment"
        android:name="com.hushbunny.app.ui.kids.AddKidFragment"
        tools:layout="@layout/fragment_add_kid">
        <argument
            android:name="isEditKid"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="kidsDetail"
            android:defaultValue="@null"
            app:argType="com.hushbunny.app.ui.model.KidsResponseModel"
            app:nullable="true" />
    </fragment>
</navigation>