<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/radius_7"
    cardview:cardElevation="@dimen/elevation_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_container"
            android:layout_width="@dimen/view_70"
            android:layout_height="@dimen/view_70"
            android:layout_margin="@dimen/margin_8"
            android:background="@color/shimmer_view_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_text"
            android:layout_width="@dimen/view_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_18"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@color/shimmer_view_background"
            app:layout_constraintEnd_toStartOf="@+id/view_profile_button"
            app:layout_constraintStart_toEndOf="@+id/image_container"
            app:layout_constraintTop_toTopOf="@+id/image_container" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nick_name_text"
            android:layout_width="@dimen/view_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_30"
            android:fontFamily="@font/roboto"
            android:background="@color/shimmer_view_background"
            app:layout_constraintEnd_toStartOf="@+id/view_profile_button"
            app:layout_constraintStart_toStartOf="@+id/name_text"
            app:layout_constraintTop_toBottomOf="@+id/name_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kids_detail_text"
            app:layout_constraintEnd_toStartOf="@+id/view_profile_button"
            android:layout_width="@dimen/view_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_50"
            android:fontFamily="@font/roboto"
            android:background="@color/shimmer_view_background"
            app:layout_constraintStart_toStartOf="@+id/name_text"
            app:layout_constraintTop_toBottomOf="@+id/nick_name_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_3"
            android:minHeight="@dimen/margin_30"
            android:paddingHorizontal="@dimen/padding_10"
            android:background="@color/shimmer_view_background"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/button_color_pink"
            app:layout_constraintBottom_toTopOf="@+id/edit_profile_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_button"
            android:layout_width="@dimen/view_constraint"
            android:textSize="@dimen/text_size_10"
            android:fontFamily="@font/roboto_medium"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_8"
            android:minHeight="@dimen/margin_30"
            android:paddingHorizontal="@dimen/padding_10"
            android:background="@color/shimmer_view_background"
            app:layout_constraintBottom_toBottomOf="@+id/image_container"
            app:layout_constraintEnd_toEndOf="@+id/view_profile_button"
            app:layout_constraintStart_toStartOf="@+id/view_profile_button"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

