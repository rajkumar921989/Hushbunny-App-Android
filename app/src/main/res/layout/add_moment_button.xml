<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_1"
    android:background="@drawable/drawable_button_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_33"
        android:layout_margin="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_moment_button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moment_image"
        android:layout_width="@dimen/view_18"
        android:layout_height="@dimen/view_18"
        android:layout_marginStart="@dimen/margin_10"
        android:src="@drawable/ic_select_image_video"
        app:layout_constraintBottom_toBottomOf="@+id/view_image"
        app:layout_constraintStart_toEndOf="@+id/view_image"
        app:layout_constraintTop_toTopOf="@+id/view_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@null"
        android:clickable="false"
        android:layout_marginStart="@dimen/margin_12"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/add_a_photo_video"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/view_image"
        app:layout_constraintStart_toEndOf="@+id/moment_image"
        app:layout_constraintTop_toTopOf="@+id/view_image" />


</androidx.constraintlayout.widget.ConstraintLayout>