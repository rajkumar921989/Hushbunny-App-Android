<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_reaction_popup_background"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/heart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        android:src="@drawable/ic_heart_reaction" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/laugh_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        android:src="@drawable/ic_laugh_reaction" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sad_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        android:src="@drawable/ic_sad_reaction" />


</LinearLayout>
