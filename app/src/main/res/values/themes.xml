<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="style_bottom_nav_label_small_default" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_8</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="style_bottom_nav_label_small_active" parent="style_bottom_nav_label_small_default">
        <item name="android:textSize">@dimen/text_size_8</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/button_color_pink</item>
    </style>

    <style name="DialogBackgroundStyle" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">@dimen/radius_5</item>
        <item name="background">@color/white</item>
    </style>

    <style name="style_tab_item_default" parent="android:Widget.CompoundButton.RadioButton">

        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="style_tab_item_selected" parent="style_tab_item_default">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@drawable/drawable_menu_background</item>
    </style>
    <style name="AddressSwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/button_color_pink</item>
    </style>
</resources>