<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="style_bottom_nav_label_small_default" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_8</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="style_bottom_nav_label_small_active" parent="style_bottom_nav_label_small_default">
        <item name="android:textSize">@dimen/text_size_8</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
</resources>